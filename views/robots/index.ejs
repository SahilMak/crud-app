<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Robots | Robots App</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel='stylesheet' type="text/css" href='/stylesheets/style.css'/>
    <script src="https://code.jquery.com/jquery-3.2.1.js"
            integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous"></script>
    <script src="/javascripts/robots.js" async></script>
</head>
<body>
<div class="container">
    <header>
        <h1><a href="../">Home</a></h1>
        <a class="btn btn-primary pull-right robot-btn" href="/robots/new" role="button"><span
                    class="glyphicon glyphicon-plus" aria-hidden="true"></span> New</a>
        <h2>
            <a href="/robots">Robots</a> |
            <a href="/orders">Orders</a>
        </h2>
    </header>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>In Stock</th>
                <th>Created</th>
                <th>Updated</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <% data.forEach(function (robot) { %>
            <tr>
                <td><%= robot._id %></td>
                <td><a href="/robots/<%= robot._id %>"><%= robot.name %></a></td>
                <td><%= robot.description %></td>
                <td><%= robot.in_stock %></td>
                <td><%= new Date(robot.created_at).toUTCString() %></td>
                <td><%= new Date(robot.updated_at).toUTCString() %></td>
                <td>
                    <button type="button" class="btn btn-warning edit"><span class="glyphicon glyphicon-pencil"
                                                                             aria-hidden="true"></span> Edit
                    </button>
                </td>
                <td>
                    <button type="button" class="btn btn-danger delete"><span class="glyphicon glyphicon-trash"
                                                                              aria-hidden="true"></span> Delete
                    </button>
                </td>
            </tr>
            <% }); %>
            </tbody>
        </table>
    </div>

    <%- include ../footer.ejs %>
</div>
</body>
</html>
